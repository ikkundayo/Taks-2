<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
  <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch, local: true do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="submit"><%= f.submit 'Update Book' %></div>
<% end %>

<span> <%= link_to "Show", "/books/#{@book.id}" %></span>
|
<span><%= link_to "Back", "/books" %></span>