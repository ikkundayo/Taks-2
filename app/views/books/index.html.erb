<body>
  <h1>Books</h1>
  
  <% @books.each do |book| %>
      <div>Title Body</div>
      <span><%= book.title %></span>
      <span><%= book.body %></span>
      <span> <%= link_to "Show", book_path(book.id) %></span>
      <span><%= link_to "Edit", edit_book_path(book.id) %></span>
      <span><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></span>
    <% end %>
  
  <h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Books' %>
<% end %>

</body>
