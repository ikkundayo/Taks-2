
<body>
  <h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th class="th-a">Title</th>
        <th class="th-b">Body</th>
        <th class="th-c", colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>

  <h2>New book</h2>

<%= form_with model: @book, local:true do |f| %>
  <div>Title</div>
  <%= f.text_field :title %>

  <div class="body1">Body</div>
  <%= f.text_area :body %>

 <div class="submit"><%= f.submit 'Create Books' %></div>
<% end %>

</body>
